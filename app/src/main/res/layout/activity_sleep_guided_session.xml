<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_gray"
    tools:context=".SleepGuidedSessionActivity">

    <include
        android:id="@+id/header"
        layout="@layout/view_common_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Title Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="32dp"
                android:maxWidth="400dp">

                <TextView
                    android:id="@+id/tv_session_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dorm Noise Adaptation Mode"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_session_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guided meditation focused on accepting and filtering ambient sounds for a restful sleep."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:maxLines="3"
                    android:ellipsize="end"/>
            </LinearLayout>

            <!-- Relaxation Visualization -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <!-- Animated Circles Container -->
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="16dp">

                    <!-- Outer Circle -->
                    <View
                        android:id="@+id/circle_outer"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_circle_outline_primary_light"/>

                    <!-- Middle Circle -->
                    <View
                        android:id="@+id/circle_middle"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_circle_outline_primary_medium"/>

                    <!-- Inner Circle -->
                    <View
                        android:id="@+id/circle_inner"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_circle_gradient"/>

                    <!-- Center Dot -->
                    <View
                        android:id="@+id/circle_center_dot"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_centerInParent="true"
                        android:background="@color/primary"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_instruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Press play to begin"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Timer Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <!-- Circular Progress Background -->
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp">

                    <!-- Background Circle -->
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/bg_circle_progress_background"/>

                    <!-- Progress Circle -->
                    <ImageView
                        android:id="@+id/iv_progress_circle"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/bg_circle_progress_foreground"/>

                    <!-- Timer Text -->
                    <TextView
                        android:id="@+id/tv_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="20:00"
                        android:textColor="@color/primary"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"/>

                    <!-- Session Duration -->
                    <TextView
                        android:id="@+id/tv_session_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/tv_timer"
                        android:layout_marginTop="8dp"
                        android:text="20 min session"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                </RelativeLayout>
            </LinearLayout>

            <!-- Progress Bar Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:maxWidth="400dp">

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="0"
                    android:progressTint="@color/primary"
                    android:progressBackgroundTint="@color/border"
                    android:max="100"/>

                <!-- Progress Text -->
                <TextView
                    android:id="@+id/tv_progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0% complete"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Control Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:maxWidth="400dp">

                <!-- Play/Pause Button Row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <!-- ä¿®å¤ï¼šä½¿ç”¨ImageButtonè€Œä¸æ˜¯åµŒå¥—ImageViewçš„Button -->
                    <ImageButton
                        android:id="@+id/btn_play_pause"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/bg_circle_gradient"
                        android:src="@drawable/ic_play"
                        app:tint="@color/white"
                        android:scaleType="center"
                        android:contentDescription="Play/Pause button"/>
                </LinearLayout>

                <!-- End Session Button -->
                <Button
                    android:id="@+id/btn_end_session"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="End Session"
                    android:backgroundTint="@color/background"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/primary"
                    app:cornerRadius="8dp"
                    android:drawableStart="@drawable/ic_hold"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>
            </LinearLayout>

            <!-- Tip Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_secondary_message_box"
                android:padding="16dp"
                android:maxWidth="400dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Tip"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Find a comfortable position and let the guidance lead you to restful sleep."
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>